@model ProyectoVistas.Models.Parrot

@{
  Layout="_LayoutMio";
}

 <div class="row mb-4">
<div id="carouselExampleControls" class="col-md-8 carousel slide" data-bs-ride="carousel" data-bs-interval="2000">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Images.Count; i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <img src="@Model.Images[i]" class="d-block w-100" alt="@Model.Name">
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
    </button>
</div>


<div class="col-md-4">
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><h3>@Model.Name</h3></li>
        <li class="list-group-item"><strong>Nombre científico:</strong> @Model.ScientificName</li>
        <li class="list-group-item"><strong>Familia:</strong> @Model.Family</li>
        <li class="list-group-item"><strong>Estado de conservación:</strong> @Model.ConservationStatus</li>
        <li class="list-group-item"><strong>Esperanza de vida:</strong> @Model.Lifespan</li>
        <li class="list-group-item"><strong>Tamaño:</strong> @Model.Size</li>
        <li class="list-group-item"><strong>Peso:</strong> @Model.Weight</li>
        <li class="list-group-item"><strong>Hábitat:</strong> @Model.Habitat</li>
        <li class="list-group-item"><strong>Distribución:</strong> @Model.Distribution</li>
        <li class="list-group-item"><strong>Dieta:</strong> @Model.Diet</li>
        <li class="list-group-item"><strong>Descripción:</strong> @Model.Description</li>
        <li class="list-group-item"><strong>Lenguaje:</strong> @Model.Language</li>
        <li class="list-group-item"><strong>País:</strong> @Model.Country</li>
        </ul>
        <a href="/Parrot/" class="mt-3 btn btn-info">Regresar</a>

    </div>
</div>
